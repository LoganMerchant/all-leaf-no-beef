<div class="container">
    <div class="row">
        <div class="col-4 text-center">
            <form class="login-form border border-secondary text-right sticky-top p-4">
                <label for="email">Email Address</label>
                <input type="text" name="email" />
                <br/>

                <label for="password">Password</label>
                <input type="password" name="password" />
                <br/>
                
                <button type="submit" class="">login</button>
            </form>
        </div>

        <ul class="col-8 list-group">
            {{#each posts}}
            <li class="list-group-item list-group-item-info mb-2">
                <div>
                    <a class="text-success display-4" href="/post/{{id}}">{{title}}</a> <br/>
                    <p class="lead text-dark">{{ content }}</p>
                    <p class="text-muted lead">{{vote_count}} upvote(s), created on {{format_date created_at}}</p>
                    <a class="text-muted lead" href="/post/{{id}}">{{comments.length}} comment(s)</a>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>
</div>

<script src="/javascript/login.js"></script>