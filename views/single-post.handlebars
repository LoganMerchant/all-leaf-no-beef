<article>
    <div>
        <a href="/post">{{post.title}}</a> <br/>
        <p>{{ post.content }}</p>
    </div>
    <div>
        {{post.vote_count}} upvote(s) by {{post.user.username}} on
        {{post.created_at}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
    </div>
</article>

<form>
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">add comment</button>
        <button type="button" >upvote</button>
    </div>
</form>

<div>
    {{#each post.comments}}
    <section>
        <div>
            {{user.username}} on {{created_at}}
        </div>
        <div>
            {{content}}
        </div>
    </section>
    {{/each}}
</div>